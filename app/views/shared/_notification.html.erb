<div class = "notification">
  <a class='notification-anchor' href = "#">
  <div class = "notBtn" href = "#">
    <!--Number supports double digets and automaticly hides itself when there is nothing between divs -->
    <div class = "number"><%=current_user.notifications.length %></div>
    <i class="fas fa-bell notification-icon"></i>
      <div class = "box">
        <div class = "display">
          <div class = "nothing">
            <i class="fas fa-child stick"></i>
            <div class = "cent">Looks Like your all caught up!</div>
          </div>
          <div class = "cont"><!-- Fold this div and try deleting evrything inbetween -->
             <% current_user.notifications.each do |notification| %>
             <div class = "sec new">
               <a class='notification-anchor' href = <%= "/items/#{notification.params[:comment].item_id}" %> >
               <div class = "txt"><%=notification.params[:message] %></div>
              <div class = "txt sub"><%= notification.created_at %></div>
               </a>
            </div>
             <% end %>

         </div>
        </div>
     </div>
  </div>
    </a>
</div>
