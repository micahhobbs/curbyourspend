<%= simple_form_for(@item) do |f| %>
  <p class="pt-3">I want to buy a:</p>
  <%= f.input :name, label: false,  placeholder: "Item name" %>
  <p class="pt-3">It costs:</p>
  <%= f.input :value, label: false,  placeholder: "Price" %>
  <p class="pt-3">For this reason:</p>
  <%= f.input :reason, :collection => %w[Fun Fitness Productivity Technology Other], label: false,  placeholder: "Reason" %>
  <p class="pt-3">It looks like:</p>
  <%= f.input :photo, as: :file, label: false %>
  <p class="pt-3">I would describe it as:</p>
  <%= f.input :description, label: false,  placeholder: "Item description" %>
  <p class="pt-3">Link:</p>
  <%= f.input :link, label: false,  placeholder: "Link to item" %>
  <div class='pb-4'>
      <p class="pt-3">I want to start tracking this item from:</p>
    <%= f.date_field :start_date, class: 'mb-2' %>
    <p class="pt-3">I want to stop tracking this item on :</p>
    <%= f.date_field :end_date, class: 'mb-2' %>
  </div>
  <p class="text-center fst-italic">We recommended given items at least 10 days to cool off.</p>
  <div class="d-flex justify-content-end">
      <%= f.submit class: "btn btn-lg gen-btn" %>
  </div>
<% end %>
