  <div class="container d-flex justify-content-end">
    <li class="nav-item px-2">
      <%= link_to 'Add Item', new_item_path, class: 'btn btn-secondary' %>
    </li>
    <li class="nav-item px-2">
      <%= link_to 'My Items', items_path, class: 'btn btn-secondary' %>
    </li>

  </div>
