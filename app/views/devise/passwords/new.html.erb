<div class='container'>
  <div class='row py-5'>
    <div class='col-6 container align-self-center border py-3 px-5 bg-white'>
      <h3 class='py-3'>Forgot your password?</h1>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Reset password", class: 'btn gen-btn mb-3' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
