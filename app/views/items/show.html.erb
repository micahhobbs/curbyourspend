<div class='container py-4'>
  <div class='row gx-4'>
    <div class='col-5'>
<%# Need to add ability to load and display images. %>
      <%= cl_image_tag @item.photo.key, height: 300, width: 400, crop: :fill %>
    </div>
    <div class='col-5 border d-flex flex-column py-4 justify-content-center align-items-center py-3'>
      <h1 class='mx-3'><%= @item.name %></h1>
      <div class='py-4'>
        <p><%= number_to_currency(@item.value) %></p>
      </div>
      <div class='py-4'>
        <%= @item.reason %>
      </div>
      <div class='py-4'>
        <%= link_to 'Link to item', @item.link %>
      </div>
      <div class='d-inline-flex py-4'>
<%# All three buttons need functionality to set status of item. %>
        <%= link_to 'Abandon', items_path, class: 'btn btn-lg wht-btn mx-2' %>
        <%= link_to 'Buy', items_path, class: 'btn btn-lg gen-btn mx-2' %>
        <%= link_to 'Extend', items_path, class: 'btn btn-lg wht-btn mx-2' %>
      </div>
    </div>
  </div>
</div>
