<ul class="nav navbar border-top py-3 px-5 light-bg">
  <div class="container d-flex justify-content-end">
    <li class="nav-item px-2">
      <%= link_to 'Dashboard', dashboard_path, class: 'btn sec-nav-btn' %>
    </li>
    <li class="nav-item px-2">
      <%= link_to 'Add Item', new_item_path, class: 'btn sec-nav-btn' %>
    </li>
  </div>
</ul>
<div class='light-bg py-4'>
  <div class='container pt-3'>
  <h1 class='d-inline fs-1 drk-header-txt'>Here's all your items..</h1>
</div>
<div class='container'>
  <div class="cards my-5">
    <% current_user.items.each do |item| %>
      <%= link_to item_path(item.id) do %>
        <div class="card card-hover text-center" style='border-radius: 3px;'>
          <div class="shadow-sm">
              <div class="card-body card-text">
                <% if item.photo.key %>
                  <%= cl_image_tag item.photo.key, height: 250, width: 350, crop: :fill %>
                <% else %>
                  <%= image_tag('no-img.png', height: 200, width: 300) %>
                <% end  %>
              </div>
              <div class="card-header lght-header-txt text-center fs-3" id='cta'>
                <%= item.name %>
              </div>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
</div>
