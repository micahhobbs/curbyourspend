<ul class="nav navbar bg-white border-top border-bottom py-3 justify-content-end px-5">
  <li class="nav-item px-1">
    <%= link_to 'Add new item', new_item_path, class: 'btn btn-secondary' %>
  </li>
</ul>
<div class='container py-3'>
  <h1 class='d-inline'>Your Items</h1>
</div>
<div class='container'>
  <table class='table table-bordered table-hover all-items'>
    <thead>
      <tr>
        <th scope="col">Item</th>
        <th scope="col">Value</th>
        <th scope="col">Reason</th>
        <th scope="col">Description</th>
        <th scope="col">Link</th>
        <th class='date-col' scope="col">Start Date</th>
        <th class='date-col' scope="col">End Date</th>
        <th scope="col">Action</th>
     </tr>
    </thead>
    <tbody>
      <%  @items.each do |item| %>
        <% if item.user_id == current_user.id %>
          <tr>
            <td onclick="location.href='<%= item_path(item.id) %>'"><%= item.name %></td>
            <td onclick="location.href='<%= item_path(item.id) %>'"><%= number_to_currency(item.value) %></td>
            <td onclick="location.href='<%= item_path(item.id) %>'"><%= item.reason %></td>
            <td onclick="location.href='<%= item_path(item.id) %>'"><%= item.description %></td>
            <td onclick="location.href='<%= item.link %>'"><%= link_to item.link, item.link %></td>
            <td onclick="location.href='<%= item_path(item.id) %>'" class='date-col'><%= item.start_date %></td>
            <td onclick="location.href='<%= item_path(item.id) %>'" class='date-col'><%= item.end_date %></td>
            <td>
              <div class='d-inline-flex'>
                <%= link_to 'Edit', edit_item_path(item), class: 'btn wht-btn mx-2' %><%= link_to 'Delete', item_path(item), class: 'btn wht-btn', method: :delete, data: { confirm: 'Are you sure you want to delete this item?' } %>
              </div>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
